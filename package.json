{
  "private": true,
  "scripts": {
    "tailwind": "tailwind build src/tailwind.css -o _scss/tailwind.scss -c tailwind.js",
    "watch": "find . -name 'tailwind.*' ! -path '*/[_.]*' ! -path './node_modules*' | entr yarn run tailwind",
    "purge": "purgecss --config purgecss.config.js --out _site",
    "build:micropub": "netlify-lambda build functions-src",
    "serve:micropub": "netlify-lambda serve functions-src"
  },
  "devDependencies": {
    "tailwindcss": "^0.6.5"
  },
  "dependencies": {
    "busboy": "^0.2.14",
    "dateformat": "^3.0.3",
    "glhd-tailwindcss-transitions": "^0.3.0",
    "gray-matter": "^4.0.1",
    "netlify-lambda": "^0.4.0",
    "node-fetch": "^2.2.0",
    "purgecss": "^1.1.0"
  }
}
